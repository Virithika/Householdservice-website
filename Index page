         <script src="script.js"></script>
       
        <script>
    // script.js
    document.addEventListener('DOMContentLoaded', function() {
      const registerButton = document.getElementById('registerButton');
      const registrationForm = document.getElementById('registrationForm');
      const closeRegistration = document.getElementById('closeRegistration');
    
      registerButton.addEventListener('click', function() {
        registrationForm.classList.remove('hidden'); // Show the registration form
      });
    
      closeRegistration.addEventListener('click', function() {
        registrationForm.classList.add('hidden'); // Hide the registration form
      });
    });
    
    
    </script>
